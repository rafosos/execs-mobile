<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exec4">

    <ImageView
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back_24px"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

<!--    Use um GridLayout com 2 colunas e 2 linhas.-->
<!--    • Adicione 4 botões representando seções diferentes (exemplo: "Usuários", "Vendas",-->
<!--    "Relatórios", "Configurações").-->
<!--    • Cada botão deve ter um ícone e um texto abaixo do ícone.-->
<!--    • Faça os botões mudarem de cor ao serem pressionados-->


    <GridLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:columnCount="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnTenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="tenis"
            android:drawableTop="@drawable/sports_tennis_24px"
            android:drawableTint="#fff"
            />

        <Button
            android:id="@+id/btnFut"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fut"
            android:drawableTop="@drawable/sports_soccer_24px"
            android:drawableTint="#fff"
            />

        <Button
            android:id="@+id/btnBasquete"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="baska"
            android:drawableTop="@drawable/sports_basketball_24px"
            android:drawableTint="#fff"
            />

        <Button
            android:id="@+id/btnSurf"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sûfe"
            android:drawableTop="@drawable/surfing_24px"
            android:drawableTint="#fff"
            />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>